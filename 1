#include<iostream>

using namespace std;

void menu(){
    int Number1, Number2;
	int Choice;
	double Result;
	char Exit_Flag = 'y';
	
	cout<<"MENU:"<<endl;
	cout<<"\t1. Add"<<endl;
	cout<<"\t2. Subtract"<<endl;
	cout<<"\t3. Multiply"<<endl;
	cout<<"\t4. Divide"<<endl;
	cout<<"\t5. Modulus"<<endl;
	
	do{
		cout<<"Enter your choice: "; cin>>choice;
		cout<<"Enter your two numbers: "; cin>>num1>>num2;
		
		switch(choice){
			case 1: 
				result = Number1 + Number2;
				break;
			case 2: 
				result = Number1 - Number2;
				break;
			case 3: 
				result = Number1 * Number2;
